{% extends 'base.html.twig' %}

{% block headerTitle %}
Usuarios Listado
{% endblock headerTitle %}

{% block headerBreadcrumb %}
<li class="breadcrumb-item"><a href='{{ path('index') }}'><i class="feather icon-home"></i></a></li>
<li class="breadcrumb-item"><a>Usuarios</a></li>
{% endblock headerBreadcrumb %}

{% block body %}
<a href="{{ path('user_new') }}" class="btn btn-outline-primary ">Crear Usuario</a>
                
<div class="card">
    <div class="card-body">
        <h5>Usuarios</h5>
        <div class="row">
            <div class="col-lg-12">
                <div class="card table-list">
                    <div class="card-body">
                        <div class="dt-responsive table-responsive">
                            <table class="table nowrap">
                                {{ hello_bootstrap_table_render(table) }}	
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>        
{% endblock %}

    
{% block stylesheets %}
    {{ parent() }}
	{{ hello_bootstrap_table_css() }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
	{{ hello_bootstrap_table_js() }}
	
{% endblock %}